# FaithTech Blueprint - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3005

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@mongodb:27017/faithtech?authSource=admin
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_SECURE_RANDOM_STRING

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
S3_BUCKET=faithtech-uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# Admin Promotion Key (for development/initial setup)
ADMIN_PROMOTE_KEY=CHANGE_ME_SECURE_KEY

# React App (Frontend)
REACT_APP_API_URL=https://api.yourdomain.com/api
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# Sentry (error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=CHANGE_ME_SECURE_SESSION_SECRET

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_INTEGRATIONS=true
ENABLE_BETA_FEATURES=false

# CHMS Integrations
PLANNING_CENTER_CLIENT_ID=YOUR_CLIENT_ID
PLANNING_CENTER_CLIENT_SECRET=YOUR_CLIENT_SECRET
PLANNING_CENTER_REDIRECT_URI=https://yourdomain.com/integrations/callback

BREEZE_API_KEY=YOUR_BREEZE_API_KEY

CCB_API_KEY=YOUR_CCB_API_KEY
CCB_API_SECRET=YOUR_CCB_API_SECRET

